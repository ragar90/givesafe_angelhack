<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#c0000000"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="co.foodcircles.activities.ReservedActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:src="@drawable/reserved_icon"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dump_view"
        android:layout_centerHorizontal="true"
        android:text="@string/dish_reserved"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"/>

    <View
        android:id="@+id/dump_view"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/reserved_icon"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dump_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/browse_btn_selector"
        android:minWidth="350dp"
        android:onClick="onContinueBrowsingClick"
        android:text="@string/continue_browsing"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/tv_reserved_venue_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/does_not_reserve_table_at_hop_cat"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"/>
</RelativeLayout>
