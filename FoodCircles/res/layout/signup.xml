<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/fuzzy_cheer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="3.0"
                android:tag="neu"
                android:text="Buy One, Feed One."
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_large_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="3.0"
                android:tag="neu"
                android:text="Buy one appetizer or dessert for $1 or more, feed one child in need."
                android:textColor="@android:color/white"
                android:textSize="@dimen/signup_small_text"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonSignIn"
            style="@style/buttonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/standard_button_height"
            android:layout_gravity="top|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_selector"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:shadowColor="@android:color/black"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="2"
            android:tag="rob"
            android:text="Sign In"
            android:textSize="@dimen/standard_button_text" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background"
        android:orientation="horizontal" >

        <android.support.v7.widget.Space
            android:id="@+id/space2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/signup_message_height"
                android:gravity="center"
                android:orientation="vertical" >

                <co.foodcircles.util.FontFitTextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:tag="neu"
                    android:text="Your appetite is powerful. Sign up today!"
                    android:textSize="@dimen/signup_powerful_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/buttonFacebook"
                        style="@style/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/standard_button_height"
                        android:background="@drawable/facebook_button_selector"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:scaleType="fitEnd"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="2"
                        android:text=""
                        android:textSize="@dimen/standard_button_text" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:shadowColor="@android:color/black"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="2"
                            android:tag="rob"
                            android:text="Log in "
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/standard_button_text" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:src="@drawable/facebook_white" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/standard_button_height"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/buttonTwitter"
                        style="@style/buttonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/standard_button_height"
                        android:background="@drawable/twitter_button_selector"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:scaleType="fitEnd"
                        android:shadowColor="@android:color/black"
                        android:shadowDx="1.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="2"
                        android:text=""
                        android:textSize="@dimen/standard_button_text" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:shadowColor="@android:color/black"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="2"
                            android:tag="rob"
                            android:text="Log in "
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/standard_button_text" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:src="@drawable/twitter_white" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="new email"
                android:inputType="textEmailAddress"
                android:tag="rob" >

                <requestFocus android:layout_width="wrap_content" />
            </EditText>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="new password"
                android:inputType="textPassword"
                android:tag="rob" />

            <Button
                android:id="@+id/buttonSignUp"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_button_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_selector"
                android:shadowColor="@android:color/black"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2"
                android:tag="rob"
                android:text="Sign Up"
                android:textSize="@dimen/standard_button_text" />

            <android.support.v7.widget.Space
                android:id="@+id/space3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/loginButtonsPadding" />
        </LinearLayout>

        <android.support.v7.widget.Space
            android:id="@+id/space1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>